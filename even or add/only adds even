#include <iostream>
using namespace std;


int main()
{
    int num;
    cout << "Enter an integer";
    cin >> num;
    if (num % 5 == 0)
        cout << num << " is a multiple of 5.";
    else
        cout << num << " is not an multiple of 5.";
        
    int n ;
    int sum = 0;
    cout << "Enter a postive integer:";
    cin >> n;
    for (int i = 1; i < n; i++){
        if (i%2 == 0)
            sum += i;
    }
    
    cout << "Sum = " << sum;
    return 0;
    
    
    
    
    
}
