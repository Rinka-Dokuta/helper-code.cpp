#include <iostream>
using namespace std;

int main()
{
    double num1, num2;
    char op;
    cout << "Enter two numbers and an operator (+,-, *, or /): ";
    cin >> num1 >> num2 >> op;
    if (op == '+') {
        cout << "Results: " << num1 + num2;
    }
    else if (op == '-') {
        cout << "Result: " << num1 - num2;
    }
    else if (op == '*') {
        cout << "Results: " << num1 * num2 << endl;
    }
    else if(op == '/'){
        if (num2 != 0) {
            cout << "Result:" << num1 / num2 << endl;
        }
    }
    else {
        cout << "Invalid operator!";
    }
}
